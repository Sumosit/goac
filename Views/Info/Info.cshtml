<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8">
    <title>One Piece</title>
    <link href="/css/default.css" rel="stylesheet" type="text/css">
    <link href="/css/tooltip.css" rel="stylesheet" type="text/css">
    <link href="/css/nav.css" rel="stylesheet" type="text/css">
    <link href="/css/info.css" rel="stylesheet" type="text/css">
    <link href="/css/tabs.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>
    <div>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700i" rel="stylesheet">

        <footer>
            <lang id="join-chat-button" class="lang">
                <a href="?lang=eng"></a>
                <a href="?lang=ru"><span>EN</span></a>
            </lang>
            <lang id="join-chat-button" class="lang" style="top: 80px">
                <a target="_blank" href="/empty"><span>BG</span></a>
            </lang>
            <lang id="join-chat-button" class="lang" style="top: 140px">
                <a target="_blank" href="https://vk.com/borialox"><span>VK</span></a>
            </lang>
            <lang id="join-chat-button" class="lang" style="top: 200px">
                <a target="_blank" href="https://twitter.com/KremlinRussia?ref_src=twsrc%5Egoogle%7Ctwcamp%5Eserp%7Ctwgr%5Eauthor"><span>TW</span></a>
            </lang>
            <lang id="join-chat-button" class="lang" style="top: 260px">
                <a target="_blank" href="#"><span>TG</span></a>
            </lang>
            <lang id="join-chat-button" class="lang" style="top: 320px">
                <a target="_blank" href="https://www.instagram.com/putin.life/?hl=ru"><span>IG</span></a>
            </lang>
        </footer>

        <nav style="position: fixed;" role="navigation" id="mainnav">
            <br><br><br>

            <ul class="gap">
                <li><a href="/profile">admin</a></li>
                <li><a href="/admin">ADMIN</a></li>
                <li><a href="/addanime">ADD ANIME</a></li>
                <li><a href="/home">HOME</a></li>
                <li><a href="/bookmark">BOOKMARK</a></li>
                <li><a href="/friends/People">FRIENDS</a></li>
                <li><a href="/login">LOGIN</a></li>
                <li><a href="/register">REGISTER</a></li>
            </ul>
        </nav>

        <div class="hamb" style="position: fixed;">
            <a><i class="fa fa-bars js-button"></i></a>
        </div>

        <script type="text/javascript" src="/js/show.js"></script>
    </div>
    <div class="hero">
        <main>
            <div class="w3-row">
                <div class="m8 w3-col">
                    <div class="item1">
                        <div class="title"><span>@ViewData["name"]</span></div>
                        <div class="history"><span>@ViewData["history"]</span></div>
                        <div class="date-genre">
                            <div class="date">
                                <span>Дата выпуска: </span><span>@ViewData["date"]</span>
                            </div>
                            <div class="date"><span>Жанры: </span><span>@ViewData["genre"]</span></div>
                        </div>
                    </div>
                </div>
                <div class="m4 w3-col">
                    <div class="item2">
                        <img src=@ViewData["image"]>
                    </div>
                </div>
                <div class="m12 w3-col">
                    <div class="item3">
                        <div class="tabs">
                            <div class="tab">
                                <input type="radio" id="1" name="tab-group" checked="">
                                <label for="1" class="tab-title">Season 1</label>
                                <section class="tab-content">
                                    <div class="w3-row">
                                        <a href="/video/1/1/1" class="m2 w3-col">
                                            <div id="join-chat-button-2">
                                                <span>1</span>
                                            </div>
                                        </a><a href="/video/1/1/2" class="m2 w3-col">
                                            <div id="join-chat-button-2">
                                                <span>2</span>
                                            </div>
                                        </a><a href="/video/1/1/3" class="m2 w3-col">
                                            <div id="join-chat-button-2">
                                                <span>3</span>
                                            </div>
                                        </a>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <div>

        <canvas id="bubble" width="1920" height="937"></canvas>

        <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.10.3/jquery-ui.js"></script>
        <script type="text/javascript" src="/js/bubble.js"></script>
    </div>

</body>
</html>